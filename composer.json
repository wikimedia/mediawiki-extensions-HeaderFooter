{
	"name": "mediawiki/header-footer",
	"type": "mediawiki-extension",
	"description": "Provides per-namespace and per-page header and footer inclusion",
	"keywords": [
		"MediaWiki",
		"Header",
		"Footer"
	],
	"homepage": "https://www.mediawiki.org/wiki/Extension:Header_Footer",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jean-Lou Dupont",
			"role": "Original developer"
		},
		{
			"name": "Douglas Mason",
			"role": "Developer"
		},
		{
			"name": "James Montalvo",
			"role": "Current developer"
		},
		{
			"name": "Hallo Welt! GmbH",
			"email": "info@hallowelt.com",
			"homepage": "https://www.hallowelt.com"
		}
	],
	"support": {
		"issues": "https://bugzilla.wikimedia.org/",
		"github": "https://github.com/enterprisemediawiki/HeaderFooter/issues"
	},
	"require": {
		"composer/installers": ">=1.0.1|~2"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.17.0",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"@phpcs",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phan": "phan -d . --long-progress-bar",
		"phpcs": "phpcs -sp --cache"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
